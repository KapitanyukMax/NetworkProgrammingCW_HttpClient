<Window x:Class="NetworkProgrammingCW_HttpClient.ImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkProgrammingCW_HttpClient"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:ImageViewModel}"
        Title="Image" Height="450" Width="800">
    <Image Margin="10" Source="{Binding ImageSource}"></Image>
</Window>